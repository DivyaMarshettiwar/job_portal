<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

<!-- servlet -->
	<servlet>
		<servlet-name>JobseekerRegisterController</servlet-name>
		<display-name>JobseekerRegisterController</display-name>
		<description></description>
		<servlet-class>com.niit.control.JobseekerRegisterController</servlet-class>
	</servlet>
	
	
	
	<servlet>
		<servlet-name>RecruiterRegisterController</servlet-name>
		<servlet-class>com.niit.control.RecruiterRegisterController</servlet-class>
	</servlet>
	
	
	<servlet>
		<servlet-name>JobseekerLoginController</servlet-name>
		<display-name>JobseekerLoginController</display-name>
		<description></description>
		<servlet-class>com.niit.control.JobseekerLoginController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>RecruiterLoginController</servlet-name>
		<display-name>RecruiterLoginController</display-name>
		<description></description>
		<servlet-class>com.niit.control.RecruiterLoginController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>JobOperationServlet</servlet-name>
		<display-name>JobOperationServlet</display-name>
		<description></description>
		<servlet-class>com.niit.control.JobOperationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<display-name>LogoutServlet</display-name>
		<description></description>
		<servlet-class>com.niit.control.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AppliedJob</servlet-name>
		<display-name>AppliedJob</display-name>
		<description></description>
		<servlet-class>com.niit.control.AppliedJob</servlet-class>
	</servlet>
	
	
	<!-- mapping -->
	
	<servlet-mapping>
		<servlet-name>JobseekerRegisterController</servlet-name>
		<url-pattern>/JobseekerRegisterController</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>RecruiterRegisterController</servlet-name>
		<url-pattern>/RecruiterRegisterController</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>JobseekerLoginController</servlet-name>
		<url-pattern>/JobseekerLoginController</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>RecruiterLoginController</servlet-name>
		<url-pattern>/RecruiterLoginController</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>JobOperationServlet</servlet-name>
		<url-pattern>/JobOperationServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/LogoutServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AppliedJob</servlet-name>
		<url-pattern>/AppliedJob</url-pattern>
	</servlet-mapping> 
	
	<session-config>
		<session-timeout>
			30
		</session-timeout>
	</session-config>


</web-app>
